/* 实例详情页面样式 */

/* 时间线样式 */
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: -35px;
    top: 5px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
}

.timeline-content {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 5px;
    border-left: 3px solid #007bff;
}

/* 实例状态指示器 */
.status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
    margin-right: 8px;
}

.status-indicator.online {
    background-color: #28a745;
    box-shadow: 0 0 6px rgba(40, 167, 69, 0.5);
}

.status-indicator.offline {
    background-color: #dc3545;
    box-shadow: 0 0 6px rgba(220, 53, 69, 0.5);
}

.status-indicator.unknown {
    background-color: #6c757d;
}

/* 实例信息卡片 */
.instance-info-card {
    transition: all 0.3s ease;
}

.instance-info-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

/* 账户列表样式 */
.account-row {
    transition: all 0.3s ease;
}

.account-row:hover {
    background-color: rgba(0, 123, 255, 0.05);
}

.account-row.deleted {
    opacity: 0.6;
    background-color: #f8f9fa;
}

/* 操作按钮组 */
.action-buttons {
    white-space: nowrap;
}

.action-buttons .btn {
    margin-right: 0.25rem;
}

/* 测试结果区域 */
.test-result {
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 0.5rem;
    border: 1px solid #dee2e6;
}

.test-result.success {
    background-color: #d4edda;
    border-color: #c3e6cb;
}

.test-result.error {
    background-color: #f8d7da;
    border-color: #f5c6cb;
}

/* 权限查看器样式 */
.permission-viewer {
    max-height: 400px;
    overflow-y: auto;
}

.permission-item {
    padding: 0.5rem;
    border-bottom: 1px solid #dee2e6;
}

.permission-item:last-child {
    border-bottom: none;
}

/* 变更历史样式 */
.history-timeline {
    max-height: 400px;
    overflow-y: auto;
}

/* 响应式调整 */
@media (max-width: 768px) {
    .action-buttons {
        white-space: normal;
    }
    
    .action-buttons .btn {
        margin-bottom: 0.25rem;
    }
    
    .timeline {
        padding-left: 20px;
    }
    
    .timeline-marker {
        left: -25px;
    }
}

/* 加载状态 */
.loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(255, 255, 255, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

/* 错误提示 */
.error-message {
    color: #dc3545;
    font-size: 0.875em;
    margin-top: 0.25rem;
}

/* 成功提示 */
.success-message {
    color: #28a745;
    font-size: 0.875em;
    margin-top: 0.25rem;
}

/* 数据库类型徽章 */
.db-type-badge {
    font-size: 0.8em;
    padding: 0.4em 0.8em;
}

/* 实例统计卡片 */
.stats-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
}

.stats-card .card-body {
    padding: 1.5rem;
}

.stats-number {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
}

.stats-label {
    font-size: 0.9rem;
    opacity: 0.9;
}

/* 账户筛选器 */
.account-filter {
    background-color: #f8f9fa;
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
}

/* 权限详情模态框 */
.permission-detail-modal .modal-dialog {
    max-width: 90%;
}

.permission-detail-modal .modal-body {
    max-height: 70vh;
    overflow-y: auto;
}
